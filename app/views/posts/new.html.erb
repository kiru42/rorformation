<% heading("Ajouter un article") %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Ajouter", class: "btn btn-primary" %>
  </div>
<% end %>