<h1 class="text-center">Articles</h1>

<hr />

<% @posts.each do |post| %>
<h2><%= post.name %></h2>
<p><%= post.content %></p>
<p>
  <a href="<%= post_path(post.id) %>" class="btn btn-primary">Lire la suite...</a>
  <a href="<%= edit_post_path(post.id) %>" class="btn btn-warning">Editer</a>
  <a href="<%= post_path(post.id) %>" class="btn btn-danger" data-confirm="Est-ce votre dernier mot?" data-method="DELETE">Supprimer</a>
</p>
<% end %>

<p>
<a href="<%= new_post_path %>" class="btn btn-success">Ajouter un article</a>
</p>